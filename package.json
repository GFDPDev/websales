{
  "name": "websales",
  "version": "1.1.2",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build-for-electron": "ng build --base-href ./",
    "electron": "npx electron .",
    "electron:build-exe": "npm run build-for-electron && electron-builder --win nsis --x64 --publish onTag"
  },
  "description": "Control de Ventas Web para Grupo Ferretero Don Pedro",
  "author": {
    "name": "Freddy Marcel Flores Chavarria",
    "email": "dev.gfdp@gmail.com"
  },
  "main": "main.js",
  "build": {
    "appId": "com.gfdp.websales",
    "productName": "GFDP Ventas Web",
    "directories": {
      "output": "release-builds"
    },
    "files": [
      "dist/websales/browser/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "GFDPDev",
      "repo": "ventas"
    },
    "win": {
      "target": "nsis",
      "icon": "logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GFDP Ventas Web"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.13",
    "@angular/cdk": "^20.2.14",
    "@angular/common": "^20.3.13",
    "@angular/compiler": "^20.3.13",
    "@angular/core": "^20.3.13",
    "@angular/forms": "^20.3.13",
    "@angular/material": "^20.2.14",
    "@angular/material-moment-adapter": "^20.2.14",
    "@angular/platform-browser": "^20.3.13",
    "@angular/platform-browser-dynamic": "^20.3.13",
    "@angular/router": "^20.3.13",
    "ag-grid-angular": "^31.0.3",
    "ag-grid-community": "^31.0.3",
    "apexcharts": "^3.54.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "jwt-decode": "^4.0.0",
    "moment": "^2.30.1",
    "ng-apexcharts": "^1.7.4",
    "rxjs": "~7.8.0",
    "sweetalert2": "^11.6.16",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.12",
    "@angular/cli": "~20.3.12",
    "@angular/compiler-cli": "^20.3.13",
    "@types/jasmine": "~4.3.0",
    "autoprefixer": "^10.4.20",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "typescript": "~5.8.3"
  }
}